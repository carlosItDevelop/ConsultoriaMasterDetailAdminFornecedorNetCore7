@using Cooperchip.ITDeveloper.Mvc.ServiceApp.ViewModels;
@model ProdutoViewModel

<!-- INVOICE TRIAGEM  -->
@{
    ViewData["Title"] = $"Detalhe do Produto - {Model.Nome}";
    ViewData["PageName"] = "detalhe-de-produto";
    ViewData["Category1"] = "Produto";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-table'></i> Detalhes do Produto: "+Model.Nome;
}

@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/datagrid/datatables/datatables.bundle.css">
    <link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <div class="panel panel-body">
                        <div class="row col-12">
                            <div class="col-md-4">
                                <img src="~/images/farmacia/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 428px" />
                            </div>
                            <div class="col-md-6">
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.FornecedorId)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Fornecedor.Nome)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Nome)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Descricao)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Descricao)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Valor)
                                    </dt>
                                    <dd>
                                        @Model.Valor.ToString("C")
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.DataCadastro)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DataCadastro)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Ativo)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Ativo)
                                    </dd>
                                </dl>

                                <div>
                                    <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                                    <a class="btn btn-outline-secondary" href="javascript:window.history.back();">Voltar</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {



}