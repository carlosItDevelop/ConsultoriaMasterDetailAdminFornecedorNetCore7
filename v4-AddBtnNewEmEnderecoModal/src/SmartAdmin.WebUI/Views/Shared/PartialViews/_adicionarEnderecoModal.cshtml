@using Cooperchip.ITDeveloper.Mvc.ServiceApp.ViewModels;
@model EnderecoViewModel;

@{
    ViewData["Title"] = "Novo Endereco";
    ViewData["PageName"] = "adicionar_endereco";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-edit'></i>  Novo Endereco";
    ViewData["Category1"] = "Endereco";
    ViewData["PageDescription"] = "Processo de inclus&atilde;o de Endereco";
}


<div class="modal fade default-example-modal-right-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-right modal-lg">
        <div class="modal-content">

            <form enctype="multipart/form-data" asp-controller="Enderecos" asp-action="Create">

                <div class="modal-header">
                    <h4 class="modal-title h4">Processo de inclus&atilde;o de Endereco</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="@(Settings.Theme.IconPrefix) fa-times"></i></span>
                    </button>
                </div>
                <div class="modal-body">



                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12">
                            <div id="panel-1" class="panel">
                                <div class="panel-hdr">
                                    <div class="panel-toolbar">
                                        <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                                        <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                                        <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                                    </div>
                                </div>
                                <div class="panel-container show">

                                    <vc:Summary></vc:Summary>


                                    <div class="panel-content">
                                        <div class="col-md-12">




                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                            <div class="form-row form-group">

                                                <div class="form-group col-md-4 mb-3">
                                                    <label asp-for="FornecedorId" class="control-label"></label>
                                                    <select asp-for="FornecedorId" class="form-control" asp-items="@(new SelectList(Model.Fornecedores, "Id", "Nome"))">
                                                        <option></option>
                                                    </select>
                                                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                                                </div>

                                                <div class="form-group col-md-4 mb-3">
                                                    <label asp-for="Logradouro" class="control-label"></label>
                                                    <input asp-for="Logradouro" class="form-control" />
                                                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                                                </div>

                                                <div class="form-group col-md-4 mb-3">
                                                    <label asp-for="Numero" class="control-label"></label>
                                                    <input asp-for="Numero" class="form-control" />
                                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="form-row form-group">
                                                <div class="form-group col-md-12 mb-3">
                                                    <label asp-for="Complemento" class="control-label"></label>
                                                    <textarea cols="40" rows="5" asp-for="Complemento" class="form-control"></textarea>
                                                    <span asp-validation-for="Complemento" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-row form-group">
                                                <div class="form-group col-md-6 mb-3">
                                                    <label asp-for="Cep" class="control-label"></label>
                                                    <input asp-for="Cep" class="form-control" />
                                                    <span asp-validation-for="Cep" class="text-danger"></span>
                                                </div>
                                                <div class="form-group col-md-6 mb-3">
                                                    <label asp-for="Bairro" class="control-label"></label>
                                                    <input asp-for="Bairro" class="form-control" />
                                                    <span asp-validation-for="Bairro" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-row form-group">
                                                <div class="form-group col-md-6 mb-3">
                                                    <label asp-for="Cidade" class="control-label"></label>
                                                    <input asp-for="Cidade" class="form-control" />
                                                    <span asp-validation-for="Cidade" class="text-danger"></span>
                                                </div>
                                                <div class="form-group col-md-6 mb-3">
                                                    <label asp-for="Estado" class="control-label"></label>
                                                    <input asp-for="Estado" class="form-control" />
                                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>






                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-primary">Cadastrar</button>
                    <button type="button" class="btn btn-outline-info" data-dismiss="modal">Close</button>
                    <a class="btn btn-outline-secondary" data-dismiss="modal" asp-action="Index">Voltar</a>
                </div>

            </form>


        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });

        $("#ImagemUpload").attr("data-val", "true");
        $("#ImagemUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>
}