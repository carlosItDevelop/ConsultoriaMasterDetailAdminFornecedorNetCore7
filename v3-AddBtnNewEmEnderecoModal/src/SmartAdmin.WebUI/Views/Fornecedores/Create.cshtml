@using Cooperchip.ITDeveloper.Mvc.ServiceApp.ViewModels;
@model FornecedorViewModel

@{
    ViewData["Title"] = "Novo Fornecedor";
    ViewData["PageName"] = "adicionar-fornecedor";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-edit'></i>  Novo Fornecdor";
    ViewData["Category1"] = "Fornecedor";
    ViewData["PageDescription"] = "Processo de inclus&atilde;o de Fornecedor";
}
<div class="row">
    <div class="col-xl-12 col-md-12 col-sm-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="col-md-12">
                        <form asp-action="Create">

                            <vc:summary></vc:summary>

                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Documento" class="control-label"></label>
                                <input asp-for="Documento" class="form-control" />
                                <span asp-validation-for="Documento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TipoFornecedor" class="control-label"></label><br />
                                <input type="radio" value="1" asp-for="TipoFornecedor" checked /> Pessoa Física<br />
                                <input type="radio" value="2" asp-for="TipoFornecedor" /> Pessoa Jurídica
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                                </label>
                            </div>

                            <h4>REPRESENTANTE LEGAL</h4>
                            <hr />

                            <partial name="_Representante" />

                            <div class="form-group">
                                <button type="submit" value="Cadastrar" class="btn btn-outline-success">Cadastrar</button>
                                <a type="button" class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section ScriptsBlock {
    <script type="text/javascript">
        var example_gridsize = $("#example-gridsize");
        $("#gridrange").on("input change", function () {
            //do something
            example_gridsize.attr("placeholder", ".col-" + $(this).val());
            example_gridsize.parent().removeClass().addClass("col-" + $(this).val())
            console.log("col-" + $(this).val());
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            SetModal();
        });
    </script>

}


