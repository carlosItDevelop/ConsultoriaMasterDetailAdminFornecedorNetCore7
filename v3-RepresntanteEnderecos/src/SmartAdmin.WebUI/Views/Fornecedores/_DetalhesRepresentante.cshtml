                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.RepresentanteLegal.SobreNome)
                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.RepresentanteLegal.Documento)
                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.RepresentanteLegal.Email)
