                            @Html.DisplayFor(model => model.RepresentanteLegal.Nome)
                            </td>
                            <td>
                            @Html.DisplayFor(model => model.RepresentanteLegal.SobreNome)
                            </td>
                            <td>
                            @Html.DisplayFor(model => model.RepresentanteLegal.Documento)
                            </td>
                            <td>
                            @Html.DisplayFor(model => model.RepresentanteLegal.Email)
                            </td>
